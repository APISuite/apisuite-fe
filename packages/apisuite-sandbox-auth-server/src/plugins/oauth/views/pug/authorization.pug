doctype html
html
  head
    title #{title}
    meta(charset='utf-8')
  body
    input#state(type='hidden', name='state', value=state)
    input#authorizationText(type='hidden', name='authorizationText', value=authorizationText)
    input#appName(type='hidden', name='appName', value=appName)
    input#permissionsText(type='hidden', name='permissionsText', value=permissionsText)
    input#authorizeButton(type='hidden', name='authorizeButton', value=authorizeButton)
    input#rejectButton(type='hidden', name='rejectButton', value=rejectButton)
    input#scopesText(type='hidden', name='scopesText', value=scopesText)
    input#authorize(type='hidden', name='authorize', value=authorize)
    input#client_id(type='hidden', name='client_id', value=clientId)
    input#brand(type='hidden', name='brand', value=brand)
    form(name='authorize', action='/authorize?state=' + state + '&client_id=' + clientId, method='post')
      div(class='form-authorize')
        input#redirect_uri(type='hidden', name='redirect_uri', value=redirectUri)
        input#scope(type='hidden', name='scope', value=scope)
        input#response_type(type='hidden', name='response_type', value=responseType)
        input#code_challenge(type='hidden', name='code_challenge', value=codeChallenge)
        input#code_challenge_method(type='hidden', name='code_challenge_method', value=codeChallengeMethod)

        #authorization
  script
    include ../../../../../dist/js/authorization.js
