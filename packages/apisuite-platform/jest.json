{
  "testRegex": "./src/.*.test.(js|ts)x?$",
  "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json", "node"],
  "transform": {
    "^.+\\.(js|jsx|ts|tsx)$": "babel-jest",
    ".+\\.(jpg|jpeg|png|gif|svg|css|scss|md)$": "<rootDir>/internals/jest/transformStub.js"
  },
  "transformIgnorePatterns": ["<rootDir>/node_modules/"],
  "setupFiles": [
    "./internals/jest/shim.js",
    "./internals/jest/setup.js"
  ],
  "modulePaths": [
    "src"
  ],
  "collectCoverageFrom": [
    "src/**/*.js",
    "!src/index.js",
    "!src/**/index.js",
    "!src/**/routes.js"
  ],
  "coveragePathIgnorePatterns": [
    "/util/",
    "store",
    "/App/",
    "/Docs",
    "/ErrorMonitor/",
    "/Monitor/"
  ],
  "coverageThreshold": {
    "global": {
      "branches": 50,
      "functions": 50,
      "lines": 50,
      "statements": 50
    }
  }
}
