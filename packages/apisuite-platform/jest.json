{
  "setupFiles": [
    "./internals/jest/shim.js",
    "./internals/jest/setup.js"
  ],
  "moduleNameMapper": {
    "\\.(jpg|jpeg|png|gif|svg|graphql|css|scss|md)$": "<rootDir>/__mocks__/fileMocks.js"
  },
  "modulePaths": [
    "src"
  ],
  "collectCoverageFrom": [
    "src/**/*.js",
    "!src/index.js",
    "!src/**/index.js",
    "!src/**/routes.js"
  ],
  "coveragePathIgnorePatterns": [
    "/util/",
    "store",
    "/App/",
    "/Docs",
    "/ErrorMonitor/",
    "/Monitor/"
  ],
  "coverageThreshold": {
    "global": {
      "branches": 25,
      "functions": 25,
      "lines": 25,
      "statements": 25
    }
  }
}
